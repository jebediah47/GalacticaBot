# GalacticaBot Environment Variables
# Copy this file to .env and fill in your values

# Database Configuration
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://user:password@postgres:5432/galacticabot

# Discord Bot Token
# Get this from https://discord.com/developers/applications
GALACTICA_TOKEN=your_discord_bot_token_here

# Certificate Authority Configuration
# Change this to a strong, random password in production!
# Used for step-ca provisioner authentication
CA_PASSWORD=changeme

# Optional: Override default CA provisioner name
# CA_PROVISIONER=admin

# Optional: Override certificate paths
# CERT_PATH=/app/certs

# Optional: Disable mTLS (not recommended for production)
# MTLS_ENABLED=false
